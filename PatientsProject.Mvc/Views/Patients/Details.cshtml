@model PatientResponse

@{
    ViewData["Title"] = "Patient Details";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            
            <!-- Back Button -->
            <div class="mb-3">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>

            <!-- Patient Card -->
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person-circle"></i> @Model.UserName
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <small class="text-muted d-block">Height</small>
                                <strong class="fs-5"><i class="bi bi-rulers"></i> @Model.HeightF</strong>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <small class="text-muted d-block">Weight</small>
                                <strong class="fs-5"><i class="bi bi-speedometer2"></i> @Model.WeightF</strong>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <small class="text-muted d-block">Group</small>
                                <span class="badge bg-secondary fs-6">@Model.Group</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <small class="text-muted d-block">Doctors</small>
                                @if (Model.Doctors != null && Model.Doctors.Any())
                                {
                                    <span>@string.Join(", ", Model.Doctors)</span>
                                }
                                else
                                {
                                    <span class="text-muted">No doctors assigned</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                @if (User.IsInRole("Admin"))
                {
                    <div class="card-footer">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>