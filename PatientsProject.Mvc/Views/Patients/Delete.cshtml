@model PatientResponse

@{
    ViewData["Title"] = "Delete Patient";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            
            <!-- Back Button -->
            <div class="mb-3">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>

            <!-- Delete Confirmation Card -->
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Delete Patient
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-circle"></i>
                        Are you sure you want to delete this patient?
                    </div>
                    
                    <div class="p-3 bg-light rounded mb-3">
                        <p class="mb-1"><strong>Patient:</strong> @Model.UserName</p>
                        <p class="mb-1"><strong>Height:</strong> @Model.HeightF</p>
                        <p class="mb-0"><strong>Weight:</strong> @Model.WeightF</p>
                    </div>

                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Yes, Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-lg"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
