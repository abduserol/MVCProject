@model PatientRequest

@{
    ViewData["Title"] = "Edit Patient";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            
            <!-- Back Button -->
            <div class="mb-3">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>

            <!-- Form Card -->
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil"></i> @ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <!-- Height -->
                        <div class="mb-3">
                            <label asp-for="Height" class="form-label">
                                <i class="bi bi-rulers"></i> Height (cm)
                            </label>
                            <input asp-for="Height" class="form-control" />
                            <span asp-validation-for="Height" class="text-danger"></span>
                        </div>

                        <!-- Weight -->
                        <div class="mb-3">
                            <label asp-for="Weight" class="form-label">
                                <i class="bi bi-speedometer2"></i> Weight (kg)
                            </label>
                            <input asp-for="Weight" class="form-control" />
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>

                        <!-- User -->
                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label">
                                <i class="bi bi-person"></i> User
                            </label>
                            <select asp-for="UserId" asp-items="ViewBag.UserId" class="form-select">
                                <option value="">-- Select User --</option>
                            </select>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>

                        <!-- Group -->
                        <div class="mb-3">
                            <label asp-for="GroupId" class="form-label">
                                <i class="bi bi-collection"></i> Group
                            </label>
                            <select asp-for="GroupId" asp-items="ViewBag.GroupId" class="form-select">
                                <option value="">-- Select Group --</option>
                            </select>
                            <span asp-validation-for="GroupId" class="text-danger"></span>
                        </div>

                        <!-- Doctors -->
                        <div class="mb-3">
                            <label asp-for="DoctorIds" class="form-label">
                                <i class="bi bi-person-badge"></i> Doctors
                            </label>
                            <select asp-for="DoctorIds" asp-items="ViewBag.Doctors" class="form-select" multiple size="4">
                            </select>
                            <small class="text-muted">Hold Ctrl to select multiple</small>
                            <span asp-validation-for="DoctorIds" class="text-danger"></span>
                        </div>

                        <!-- Submit -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-check-lg"></i> Update Patient
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
