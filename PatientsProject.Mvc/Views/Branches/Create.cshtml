@model BranchRequest

@{
    ViewData["Title"] = "Create Branch";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            
            <div class="mb-3">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>

            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle"></i> @ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">
                                <i class="bi bi-building"></i> Branch Name
                            </label>
                            <input asp-for="Title" class="form-control" placeholder="Enter branch name" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-check-lg"></i> Create Branch
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}