@model IEnumerable<DoctorResponse>

@{
    ViewData["Title"] = "Doctors";
}

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1"><i class="bi bi-person-badge text-success"></i> @ViewData["Title"]</h2>
            @if (Model is not null)
            {
                <small class="text-muted">
                    <span class="badge bg-success">@Model.Count()</span> doctor(s) found
                </small>
            }
        </div>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-lg"></i> Add Doctor
            </a>
        }
    </div>

    <!-- Message -->
    @if (TempData["Message"] is not null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Table -->
    @if (Model is not null && Model.Any())
    {
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th><i class="bi bi-person"></i> Doctor Name</th>
                            <th><i class="bi bi-building"></i> Branch</th>
                            <th><i class="bi bi-people"></i> Patients</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>@item.DoctorName</strong></td>
                                <td>
                                    <span class="badge bg-info text-dark">@item.Branch</span>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@item.PatientCount patient(s)</span>
                                </td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No doctors found.
        </div>
    }
</div>